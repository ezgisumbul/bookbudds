<div class='container'>

  <h3 class='book-title'>{{club.name}}</h3>
  {{! class name should be generalized }}

  <div class='single'>
    <div class='single-info'>
      <p>{{club.description}}</p>
    </div>
    <div class='single-sidebar'>
      <div class='single-sidebar-text'>
        <p><span>Created by:</span> {{{club.creator.name}}}</p>
        <p><span>Members:</span> <a href="/clubs/club/{{club._id}}/members">#number</p></a>
      </div>

      {{#unless isClubMember}}

        <div class='item-btn'>
          <form action='/clubs/club/{{club._id}}/join' method='POST'>
            <button class='button'>Join</button>
          </form>
        </div>

      {{/unless}}

      {{#if userIsOwner}}
        <div class='item-btn'>
          <form action='/clubs/club/{{club._id}}/edit' method='GET'>
            <button class='button'>Edit</button>
          </form>
        </div>

        <div class='item-btn'>
          <form action='/clubs/club/{{club._id}}/delete' method='POST'>
            <button class='button'>Delete</button>
          </form>
        </div>

      {{/if}}

    </div>
  </div>
