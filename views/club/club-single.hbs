<div class='container'>
  <h1>Welcome to {{club.name}}</h1>

  <h3>Club Description</h3>

  <p>{{club.description}}</p>

  <small>{{club.creator.name}}</small>

  {{#unless isClubMember}}
    <form action='/clubs/club/{{club._id}}/join' method='POST'>
      <button>Join</button>
    </form>
  {{/unless}}

  {{#if userIsOwner}}

    <form action='/clubs/club/{{club._id}}/edit' method='GET'>
      <button>Edit</button>
    </form>

    <form action='/clubs/club/{{club._id}}/delete' method='POST'>
      <button>Delete</button>
    </form>

  {{/if}}

  <h3>Members</h3>

  {{#each members}}

    <a href='/profile/{{_id}}'>{{name}}</a>

  {{/each}}
</div>