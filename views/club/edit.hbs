<div class='container'>

  <div class='page-hero'>

    <div class='banner-img-box profile-banner'>
      <img src='/images/hero-profile-edit.svg' alt='Your BookBudds profile' />
    </div>

    <div class='crud-forms-container'>
      <h3>Edit your club</h3>

      <form method='POST' enctype='multipart/form-data'>
        <div>
          <label for=''>Club name</label>
          <input
            value='{{club.name}}'
            id='input-name'
            name='name'
            type='text'
            placeholder='Club name...'
          />
        </div>

        <div>
          <label for='input-description'>Club description</label>
          <input
            value='{{club.description}}'
            id='input-description'
            name='description'
            type='text'
            placeholder='Description...'
          />
        </div>

        {{#if club.picture}}
          <img src='{{club.picture}}' alt='Existing Picture' />
        {{/if}}
        <label for='input-picture'>Your current club picture</label>
        <input id='input-picture' type='file' accept='image/*' name='picture' />

        <button class='button'>Edit club</button>
      </form>
    </div>
  </div>
</div>