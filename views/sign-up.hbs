<div class="container">

  <div class="auth-forms-container">

    <h3>Create Your Account</h3>

    <div class="book-search-banner">
      <img src="/images/bookbudds-ban.png">
    </div>

    {{#if error}}
    <div class="error-messages">
      <h3>Something went wrong</h3>
      <p>{{error.message}}</p>
    </div>
    {{/if}}

    <form action="/authentication/sign-up" method="POST" id="auth-forms" enctype="multipart/form-data" novalidate>
      <div>
        <label for="input-name">Name</label>
        <div class="name error"></div>
        <input type="text" id="input-name" name="name" placeholder="Your Name" value="{{name}}" />
      </div>


      <div>
        <label for=" input-email">Email</label>
        <div class="email error"></div>
        <input type="email" id="input-email" name="email" placeholder="Your Email" />
      </div>

      <div>
        <label for="input-password">Password</label>
        <div class="password error"></div>
        <input type="password" name="password" id="input-password" placeholder="A Strong Password" />
      </div>

      <div>
        <label for="input-picture">Profile photo</label>
        <input id="input-picture" type="file" accept="image/*" name="picture" value="test" />
      </div>

      <div class="auth-forms-actions">
        <button class="button">Sign Up</button>
        <span>You already have an account? <span><a href="/authentication/sign-in">Log In</a></span></span>
      </div>
    </form>
  </div>
</div>